    "@hapi/joi": "^17.1.1",
    "bcrypt": "^4.0.1",
    "config": "^3.3.1",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.8.9",
    "node-fetch": "^2.6.0",
    "nodemailer": "^6.4.6",
    "nodemon": "^2.0.2"
  },
  "devDependencies": {
    "jest": "^26.1.0"
  }
